<!-- Search Tab -->
<form class="nav-tab searchTab" id="searchTab" action="/search" method="get">
  <button type="button" class="selectBoxBtn d-flex-row" id="searchType">
    <i class="fa-solid fa-filter"></i> Filtrele
  </button>
  <ul class="selectBoxList" id="searchTypeSelectBox">
    <li class="selectBox-item">
      <label for="searchTypeAll">
        <input
          type="radio"
          name="searchType"
          value="all"
          id="searchTypeAll"
          checked
        />
        <i class="icon fa-duotone fa-solid fa-list"></i> Tümü
      </label>
    </li>
    <li class="selectBox-item">
      <label for="searchTypeTitle">
        <input
          type="radio"
          name="searchType"
          value="title"
          id="searchTypeTitle"
        />
        <i class="icon fa-duotone fa-solid fa-heading"></i> Başlık
      </label>
    </li>
    <li class="selectBox-item">
      <label for="searchTypeAuthor">
        <input
          type="radio"
          name="searchType"
          value="author"
          id="searchTypeAuthor"
        />
        <i class="icon fa-duotone fa-solid fa-user"></i> Yazar
      </label>
    </li>
    <li class="selectBox-item">
      <label for="searchTypeText">
        <input
          type="radio"
          name="searchType"
          value="text"
          id="searchTypeText"
        />
        <i class="icon fa-duotone fa-light fa-quote-left"></i> Metin
      </label>
    </li>
    <li class="selectBox-item">
      <label for="searchTypeSubjects">
        <input
          type="radio"
          name="searchType"
          value="subjects"
          id="searchTypeSubjects"
        />
        <i class="icon fa-duotone fa-solid fa-objects-column"></i> Konular
      </label>
    </li>
  </ul>

  <input type="text" name="searchValue" id="searchInput" placeholder="Search" />
  <button class="searchBtn"><i class="icon fa fa-search"></i></button>
</form>
<!-- Filter Tab -->
<form class="nav-tab filterTab" id="filterTab" action="/search" method="get">
  <i class="icon fa fa-globe"></i>
  <select name="searchLanguage" id="searchLanguage">
    <option value="">Lang</option>
  </select>
</form>
<!-- Date Tab -->
<div class="nav-tab dateTab" id="dateTab">
  <div class="nav-tab-item">
    <i class="icon far fa-clock"></i>
    <span id="time"> 09:00 AM </span>
  </div>
  <div class="nav-tab-item">
    <i class="icon fa fa-calendar-days"></i>
    <span id="date">4-Mar-2023</span>
  </div>
</div>
<!-- User Tab -->
<div class="nav-tab userTab" id="userTab">
  <div class="nav-tab-item">
    <img src="public/images/user.jpg" alt="anonim" width="30px" />
    <span id="accountName">Anonim</span>
  </div>
</div>
